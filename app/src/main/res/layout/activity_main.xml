<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity">

    <Button
        android:id="@+id/testbtn"
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/bg_imgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:scaleType="fitXY"
        android:src="@drawable/mainactivity_bg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="26dp"
        android:clickable="false"
        android:src="@drawable/container_img" />


    <ImageView
        android:id="@+id/colorfun_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/colorfun_img" />

    <ImageView
        android:id="@+id/drawing_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="70dp"
        android:layout_toRightOf="@id/colorfun_btn"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/drawing_img" />

    <ImageView
        android:id="@+id/puzzle_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="70dp"
        android:layout_toRightOf="@id/drawing_btn"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/puzzle_img" />

    <ImageView
        android:id="@+id/Gallery_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="70dp"
        android:layout_toRightOf="@id/puzzle_btn"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/gallery_img" />

    <ImageView
        android:id="@+id/sound_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="145dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/soung_img" />

    <FrameLayout
        android:id="@+id/rame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp">

    </FrameLayout>
</RelativeLayout>