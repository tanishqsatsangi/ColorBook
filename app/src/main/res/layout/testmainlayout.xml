<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:padding="20dp"
    android:background="@drawable/mainactivity_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_above="@id/puzzleimg"
        android:layout_margin="5dp"
        android:id="@+id/colourfun"
        android:src="@drawable/colorfun_img"
        android:layout_width="200dp"
        android:layout_height="250dp" />

    <ImageView
        android:layout_above="@id/puzzleimg"
        android:layout_toRightOf="@id/colourfun"
        android:id="@+id/drawingfun"
        android:src="@drawable/drawing_img"
        android:layout_width="200dp"
        android:layout_height="250dp" />


    <ImageView
        android:id="@+id/puzzleimg"

        android:layout_alignParentBottom="true"
        android:src="@drawable/puzzle_img"
        android:layout_width="200dp"
        android:layout_height="250dp" />

    <ImageView
        android:id="@+id/galleryimg"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/puzzleimg"
        android:src="@drawable/gallery_img"
        android:layout_width="200dp"
        android:layout_height="250dp" />
</RelativeLayout>