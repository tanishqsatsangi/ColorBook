<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#446BA9"
    android:orientation="vertical"
    tools:context=".Main.GalleryFragment">

    <ImageView
        android:id="@+id/galleryclosebtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:contentDescription="@string/close_gallery"
        android:scaleType="fitEnd"
        android:src="@drawable/closeimg" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/galleryRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/galleryclosebtn"></android.support.v7.widget.RecyclerView>
</RelativeLayout>